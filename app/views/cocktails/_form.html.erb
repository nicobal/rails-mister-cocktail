<%= simple_form_for(@cocktail) do |c| %>

  <% if @cocktail.errors.any? %>
    <div class="errors-container">
      <ul>
        <% @cocktail.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>

  <%= c.input :name %>
  <%= c.submit "add a cocktail", class: "btn btn-primary" %>

  <% end %>
